/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "baseUrl": "src",
    "experimentalDecorators": true,
    "paths": {
      "@alexandria/config/*": ["app/common/config/*"],
      "@alexandria/enum/*": ["app/common/enum/*"],
      "@alexandria/mock/*": ["app/mock/*"],
      "@alexandria/service/*": ["app/common/service/*"],
      "@alexandria/domain/*": ["app/domain/*"],
      "@alexandria/common/*": ["app/common/*"],
      "@alexandria/component/*": ["app/common/component/*"]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
